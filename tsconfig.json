{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}