{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "target": "es2018",
    "sourceMap": false,
    "outDir": "./lib",
    "baseUrl": "./",
    "esModuleInterop": true,
    "incremental": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typing"
    ],
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "script",
    "example"
  ]
}